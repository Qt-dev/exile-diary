{
  "name": "exile-diary",
  "version": "1.6.4",
  "main": "./build/main/index.js",
  "homepage": "./",
  "build": {
    "appId": "com.exilediary.reborn",
    "productName": "Exile Diary Reborn",
    "protocols": [
      {
        "name": "Exile Diary",
        "schemes": [
          "exile-diary"
        ]
      }
    ],
    "files": [
      "build/**/*",
      "public/icon.*",
      "public/icon512x512.*"
    ],
    "win": {
      "target": "nsis",
      "artifactName": "exile-diary-reborn-setup-${version}.${ext}",
      "icon": "./src/renderer/assets/img/icons/win/ExileDiary.ico",
      "extraResources": [
        "eng.traineddata",
        {
          "from": "./src/main/db/extensions",
          "to": "db/extensions"
        }
      ]
    },
    "nsis": {
      "oneClick": "false",
      "allowElevation": "false",
      "allowToChangeInstallationDirectory": "true",
      "installerIcon": "./src/renderer/assets/img/icons/win/ExileDiary.ico",
      "uninstallerIcon": "./src/renderer/assets/img/icons/win/ExileDiary.ico",
      "installerHeaderIcon": "./src/renderer/assets/img/icons/win/ExileDiary.ico"
    },
    "linux": {
      "target": "flatpak",
      "executableName": "exile-diary",
      "icon": "./src/renderer/assets/img/icons/png",
      "category": "Utility",
      "maintainer": "qt-dev",
      "asarUnpack": [
        "node_modules/sharp/**"
      ]
    },
    "flatpak": {
      "useWaylandFlags": true,
      "runtimeVersion": "22.08",
      "baseVersion": "22.08",
      "files": [
        [
          "./eng.traineddata",
          "lib/com.exilediary.reborn/resources/eng.traineddata"
        ],
        [
          "./src/main/db/extensions/regexp.so",
          "lib/com.exilediary.reborn/resources/db/extensions/regexp.so"
        ]
      ]
    }
  },
  "scripts": {
    "start": "electron .",
    "test": " tsc -p src/main",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "pretty": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "react:start": "node scripts/start.js",
    "react:build": "node scripts/build.js",
    "react:test": "node scripts/test.js",
    "react:eject": "node scripts/eject.js",
    "data:extract": "cd scripts/data-extractor && node index.js update && pathofexile-dat && node index.js items && prettier --write \"../../src/**/*.json\"",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "build": "npm run react:build && tsc -p src/main && electron-builder -p never",
    "dev": "concurrently \"cross-env BROWSER=none npm run react:start\" \"wait-on http://localhost:3000 && tsc -p src/main -w\" \"wait-on http://localhost:3000 && tsc -p src/main && electron .\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-throw-literal": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "util",
    "functional",
    "server",
    "client",
    "browser"
  ],
  "author": "qt-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/qt-dev/exile-diary.git"
  },
  "contributors": [],
  "dependencies": {
    "@babel/core": "^7.16.0",
    "@electron/remote": "^2.0.8",
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "@fortawesome/free-brands-svg-icons": "^6.5.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@mui/icons-material": "^5.14.18",
    "@mui/material": "^5.14.18",
    "@mui/x-date-pickers": "^6.18.1",
    "axios": "^1.6.8",
    "axios-cache-interceptor": "^1.5.2",
    "babel-jest": "^27.4.2",
    "babel-loader": "^8.2.3",
    "babel-plugin-named-asset-import": "^0.3.8",
    "babel-preset-react-app": "^10.0.1",
    "base64url": "^3.0.1",
    "better-sqlite3": "^9.6.0",
    "bfj": "^7.0.2",
    "bottleneck": "^2.19.5",
    "browserslist": "^4.18.1",
    "camelcase": "^6.2.1",
    "case": "^1.6.3",
    "chokidar": "^3.5.3",
    "classnames": "^2.3.2",
    "color-convert": "^2.0.1",
    "css-loader": "^6.5.1",
    "dayjs": "^1.11.10",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.0.0-beta.22",
    "electron-overlay-window": "^3.3.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.3.0",
    "eslint": "^8.3.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-webpack-plugin": "^3.1.1",
    "express": "^4.19.2",
    "fast-equals": "^4.0.1",
    "file-loader": "^6.2.0",
    "file-saver": "^2.0.5",
    "fs-extra": "^10.0.0",
    "html-to-image": "^1.11.11",
    "html-webpack-plugin": "^5.5.0",
    "identity-obj-proxy": "^3.0.0",
    "imgur": "^2.2.0",
    "jest": "^27.4.3",
    "jest-resolve": "^27.4.2",
    "jest-watch-typeahead": "^1.0.0",
    "js-levenshtein": "^1.1.6",
    "json-2-csv": "^4.1.1",
    "merge-img": "^2.1.3",
    "mini-css-extract-plugin": "^2.4.5",
    "mobx": "^6.9.0",
    "mobx-persist": "^0.4.1",
    "mobx-react-lite": "^3.4.3",
    "nodejs-tail": "^1.1.1",
    "opn": "^6.0.0",
    "pastebin-js": "^1.0.6",
    "postcss": "^8.4.4",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-loader": "^6.2.1",
    "postcss-normalize": "^10.0.1",
    "postcss-preset-env": "^7.0.1",
    "prompts": "^2.4.2",
    "ps-list": "^7.2.0",
    "randomstring": "^1.2.3",
    "react-app-polyfill": "^3.0.0",
    "react-router": "^6.10.0",
    "react-router-dom": "^6.10.0",
    "react-string-replace": "^1.1.0",
    "request": "^2.88.2",
    "resolve": "^1.20.0",
    "resolve-url-loader": "^4.0.0",
    "sass-loader": "^12.3.0",
    "semver": "^7.5.2",
    "sharp": "^0.32.6",
    "source-map-explorer": "^2.5.3",
    "source-map-loader": "^4.0.1",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.0.2",
    "tesseract.js": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.8.1",
    "workbox-webpack-plugin": "^6.4.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.13",
    "@svgr/webpack": "^8.1.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/better-sqlite3": "^7.6.4",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.10",
    "@types/sqlite3": "^3.1.8",
    "case-sensitive-paths-webpack-plugin": "^2.4.0",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "electron": "^25.8.4",
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1",
    "pathofexile-dat": "^9.1.0",
    "prettier": "^2.8.7",
    "react": "^18.2.0",
    "react-dev-utils": "^12.0.1",
    "react-dom": "^18.2.0",
    "react-refresh": "^0.14.0",
    "terser-webpack-plugin": "^5.3.10",
    "tslib": "^2.5.0",
    "typescript": "^5.2.2",
    "wait-on": "^7.2.0",
    "web-vitals": "^2.1.4",
    "webpack": "^5.91.0",
    "webpack-dev-server": "^5.0.4",
    "webpack-manifest-plugin": "^5.0.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "setupFiles": [
      "react-app-polyfill/jsdom"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(js|jsx|mjs|cjs|ts|tsx)$": "<rootDir>/config/jest/babelTransform.js",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|cjs|ts|tsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|cjs|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "modulePaths": [],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "resetMocks": true
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  }
}
